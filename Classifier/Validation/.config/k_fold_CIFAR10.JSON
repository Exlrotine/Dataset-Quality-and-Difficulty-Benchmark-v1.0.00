{
  "name": "k_fold_CIFAR",
  "data_dir": "../dataset",
  "split_json": "splits.json",
  "model": "ResNet18",
  "model_args": { "num_classes": 10},
  "train_ratio": 0.8,
  "random_label": false,
  "shuffle_ratio": 0.0,
  "batch_size": 64,
  "lr": 1e-3,
  "weight_decay": 5e-3,
  "epochs": 100,
  "patience": 100,
  "val_freq": 1,
  "seed": 42,
  "scheduler": { "step": 40, "gamma": 0.2 }
}
